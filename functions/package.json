{
  "name": "functions",
  "scripts": {
    "lint": "eslint --fix --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "cd .. && firebase deploy --only functions && cd functions",
    "logs": "firebase functions:log",
    "test": "mocha --reporter spec -r ts-node/register --timeout 3600000 --reporter-option maxDiffSize=0",
    "testFunctions": "npm run test test/**Functions/*.test.ts",
    "testUtils": "npm run test test/*.test.ts",
    "testAll": "npm run test test/**/*.test.ts test/*.test.ts",
    "test:coverage": "nyc npm run test",
    "testUtils:coverage": "nyc npm run testUtils",
    "generateApiSchemaDocs": "cd .. && redoc-cli build functions/api-schema.yaml -o functions/docs/api-schema.html && cd functions",
    "secrets": "ts-node ../../secrets/src/manageSecrets.ts"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/src/index.js",
  "dependencies": {
    "cross-fetch": "^3.1.6",
    "firebase-function": "^1.4.37",
    "firebase-functions": "^4.4.0",
    "fontkit": "^2.0.2",
    "nodemailer": "^6.9.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.5",
    "@types/dom-parser": "^0.1.1",
    "@types/fontkit": "^2.0.3",
    "@types/mocha": "^10.0.1",
    "@types/nodemailer": "^6.4.7",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "chai": "^4.3.7",
    "eslint": "^8.40.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "firebase": "^9.22.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.1"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [],
    "reporter": [
      "html",
      "lcov",
      "text"
    ],
    "report-dir": "coverage"
  },
  "private": true
}
